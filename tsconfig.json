{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@controllers/*": [
        "./src/backend/controllers/*"
      ],
      "@model/*": [
        "src/backend/models/*"
      ],
      "@routes/*": [
        "./src/backend/routes/*"
      ],
      "@config/*": [
        "./src/backend/config/*"
      ],
      "@utils/*": [
        "./src/backend/utils/*"
      ],
      "@lib/*": [
        "./lib/*"
      ]
    },
    "target": "ES2017"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/types/react-lazyload.d.ts"
  ]
}
